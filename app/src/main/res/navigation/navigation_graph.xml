<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.myproject.playlistmaker.search.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.myproject.playlistmaker.medialibrary.ui.fragment.MediaLibraryFragment"
        android:label="fragment_media_library"
        tools:layout="@layout/fragment_media_library" >
        <action
            android:id="@+id/action_mediaLibraryFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_addNewPlayListFragment"
            app:destination="@id/addNewPlayListFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.myproject.playlistmaker.player.ui.fragment.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player">

        <action
            android:id="@+id/action_playerFragment_to_addNewPlayListFragment"
            app:destination="@id/addNewPlayListFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.myproject.playlistmaker.settings.ui.fragment.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/addNewPlayListFragment"
        android:name="com.myproject.playlistmaker.medialibrary.ui.fragment.AddNewPlayListFragment"
        android:label="fragment_add_new_play_list"
        tools:layout="@layout/fragment_add_new_play_list" />

</navigation>