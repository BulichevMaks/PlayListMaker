<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SwitchCompat" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">#46bdbf</item>
        <item name="colorSwitchThumbNormal">#AEAFB4</item>
        <item name="android:colorForeground">#E6E8EB</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="TextViewSettingsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_settings_activity</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageViewSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:tint">@android:color/black</item>

    </style>

    <style name="ActivityMainButtonTextStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_main_activity</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ErrorMessageStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:drawableTop">@drawable/error_not_found</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="Digit">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>
    <style name="PlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/blue</item>
    </style>
    <style name="CreateButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="iconPlayListStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="iconBottomSheetStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="playerTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="countTrackTextView">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="playListIconStyle">
        <item name="android:background">@drawable/playlist_icon</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="fragmentConteiner">
        <item name="android:background">@color/white</item>
    </style>
    <style name="bottomSheetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:orientation">vertical</item>
        <item name="behavior_hideable">true</item>
    </style>
    <style name="rectanglView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="buttorRefresh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/refresh</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:visibility">invisible</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">20dp</item>
    </style>


</resources>