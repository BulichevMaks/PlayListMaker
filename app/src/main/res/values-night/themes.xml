<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PlayListMaker_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vp_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Search">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/ic_search_night</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/et_style_night</item>
    </style>
    <style name="Clear">
        <item name="tint">@color/black</item>
    </style>
    <style name="Track">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TrackItem">
        <item name="android:background">@color/black</item>
    </style>
    <style name="Track.Text">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="MainActivity">
        <item name="android:background">@color/black</item>
    </style>
    <style name="TextPlayerMain">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextPlayer">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AddImagePlayer">
        <item name="android:src">@drawable/ic_add_button_night</item>
    </style>
    <style name="PlayImagePlayer">
        <item name="android:src">@drawable/ic_play_button_night</item>
    </style>
    <style name="FavoriteImagePlayer">
        <item name="android:src">@drawable/ic_favorite_button_night</item>
    </style>
    <style name="MediaTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
        <item name="android:textSize">14sp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="itemIconTint">@xml/menu_item_color_selector_dark</item>
        <item name="itemTextColor">@xml/menu_item_color_selector_dark</item>
    </style>

</resources>